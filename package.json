{
  "name": "rave-simulator",
  "version": "3.0.1",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "test": "npm run test:unit && npm run test:api",
    "test:unit": "jest --passWithNoTests --testPathPattern=tests/unit",
    "test:api": "jest --passWithNoTests --testPathPattern=tests/api"
  },
  "dependencies": {
    "@faker-js/faker": "^9.0.0",
    "express": "^5.1.0",
    "fastify": "^5.0.0",
    "js-yaml": "^4.1.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.11.30",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "jest": "^29.7.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.1.1",
    "tsx": "^4.16.0",
    "typescript": "^5.5.4"
  },
  "jest": {
  "preset": "ts-jest/presets/default-esm",
  "testEnvironment": "node",
  "extensionsToTreatAsEsm": [".ts"],
  "transform": {
    "^.+\\.tsx?$": [
      "ts-jest",
      {
        "useESM": true,
        "isolatedModules": true,
        "diagnostics": false
      }
    ]
  },
  "moduleNameMapper": {
    "^(\\.{1,2}/.*)\\.js$": "$1"
  },
  "testMatch": ["**/tests/**/*.test.ts"]
  }
}